{
    "files": [
        "application/app.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "experimentalDecorators":true,              // 使用装饰器
        "emitDecoratorMetadata":true,               // 使用元数据
        "declaration": true,                        // 生成相关的d.ts
        "alwaysStrict": true,                       // 严格模式编译每个文件
        "target": "es2017",                         // 编译目标
        // "sourceMap": true,
        "outDir": "./dist",                         // 输出目录
        "baseUrl": "."
    },
    "lib":["es2017"],
    "include": [
        "application/**/*"
    ],
    "watch":true,
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}